# Backend Environment Variables (copy to backend/.env)

# FastAPI
APP_NAME=Stralix API
APP_ENV=production
APP_PORT=8000
APP_HOST=0.0.0.0

# Security
SECRET_KEY=change_me_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,https://stralix.cloud

# Database (managed PostgreSQL on external server)
# Format: postgresql+asyncpg://USER:PASS@HOST:PORT/DBNAME
DATABASE_URL=postgresql+asyncpg://stralix:password@db.example.com:5432/stralix

# Email (for verification and password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=no-reply@stralix.cloud
SMTP_PASSWORD=change_me
SMTP_FROM_NAME=Stralix
SMTP_TLS=true

# 2FA / TOTP
TOTP_ISSUER=Stralix

# Rate limiting (if using a proxy/middleware)
RATE_LIMIT_LOGIN_PER_MIN=10
